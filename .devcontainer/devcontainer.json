{
  "name": "ESP32 Development Environment",
  "image": "mcr.microsoft.com/vscode/devcontainers/base:debian-11",
  "features": {
    "ghcr.io/devcontainers/features/arduino-cli:1": {},
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.10"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "wokwi.wokwi-vscode",
        "platformio.platformio-ide",
        "vsciot-vscode.vscode-arduino",
        "ms-vscode.cpptools"
      ],
      "settings": {
        "workbench.colorTheme": "Visual Studio Dark",
        "editor.formatOnSave": true
      }
    }
  },
  "postCreateCommand": "arduino-cli core install esp32:esp32 && platformio update",
  "remoteUser": "vscode"
}
