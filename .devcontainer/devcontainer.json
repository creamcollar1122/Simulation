{
  "name": "ESP32 Pre-Built Dev Environment",
  "image": "ghcr.io/devcontainers/features/arduino-cli:latest",
  "customizations": {
    "vscode": {
      "extensions": [
        "wokwi.wokwi-vscode",
        "platformio.platformio-ide",
        "vsciot-vscode.vscode-arduino",
        "ms-vscode.cpptools"
      ]
    }
  },
  "postCreateCommand": "arduino-cli core install esp32:esp32",
  "remoteUser": "vscode"
}
